<?xml version="1.0" encoding="UTF-8"?>
<actionExtension xmlns:diffscope="http://schemas.diffscope.org/diffscope/actions/diffscope">
    <version>1.0</version>
    <id>org.diffscope.core.macos</id>
    <configuration>
        <defaultCatalog>core.mainMenu</defaultCatalog>
        <translationContext
                text="Application::ActionText"
                class="Application::ActionClass"
                description="Application::ActionDescription"
        />
        <vars>
            <var key="APP_NAME" value="DiffScope" />
        </vars>
    </configuration>

    <items>
        <menu id="core.homeMenu" topLevel="true" />
    </items>

    <layouts>
        <menu id="core.homeMenu">
            <menu id="core.file" />
            <menu id="core.homeView" text="View">
                <action id="core.home.recentFiles" />
                <action id="core.home.recoveryFiles" />
                <separator />
                <action id="core.home.gridView" />
                <action id="core.home.listView" />
            </menu>
            <menu id="core.help" />
        </menu>
    </layouts>

</actionExtension>