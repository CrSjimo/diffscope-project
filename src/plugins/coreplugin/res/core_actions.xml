<?xml version="1.0" encoding="UTF-8"?>
<actionExtension xmlns:diffscope="http://schemas.diffscope.org/diffscope/actions/diffscope">
    <version>1.0</version>
    <id>org.diffscope.core</id>
    <configuration>
        <defaultCatalog>core.mainMenu</defaultCatalog>
        <translationContext
            text="Application::ActionText"
            class="Application::ActionClass"
            description="Application::ActionDescription"
        />
        <vars>
            <var key="APP_NAME" value="DiffScope" />
        </vars>
    </configuration>

    <items>
        <action id="core.newFile" text="&amp;New" class="File" shortcut="Ctrl+N" />
        <action id="core.openFile" text="&amp;Open..." class="File" shortcut="Ctrl+O" />
        <action id="core.saveFile" text="&amp;Save" class="File" shortcut="Ctrl+S" />

        <action id="core.settings" text="Se&amp;ttings..." description="Open Settings" class="Preferences" shortcut="Ctrl+,"/>
        <action id="core.plugins" text="Pl&amp;ugins..." class="Preferences" shortcut=""/>

        <action id="core.showHome" text="Show &amp;Home Window"  class="Application" />

        <action id="core.exit" text="E&amp;xit"  class="Application" />

        <action id="core.recentFiles" class="Home" catalog="core.homeMenu"/>
        <action id="core.recoveryFiles" class="Home" catalog="core.homeMenu" />
        <action id="core.gridView" class="Home" catalog="core.homeMenu" />
        <action id="core.listView" class="Home" catalog="core.homeMenu" />

        <action id="core.timeIndicatorShowMusicTime" text="Show &amp;Music Time" class="Timeline" />
        <action id="core.timeIndicatorShowAbsoluteTime" text="Show &amp;Absolute Time" class="Timeline" />
        <action id="core.timelineGoTo" text="&amp;Go To..." shortcut="Ctrl+Shift+G" class="Timeline" />
        <action id="core.timelineQuickJump" text="&amp;Quick Jump..." shortcut="Ctrl+G" class="Timeline" />
        <action id="core.timelineGoToStart" text="Go To &amp;Start" shortcut="Home" class="Timeline"/>
        <action id="core.timelineGoToPreviousMeasure" text="Go To Previous Measure" shortcut="[" class="Timeline"/>
        <action id="core.timelineGoToPreviousBeat" text="Go To Previous Beat" shortcut="Ctrl+[" class="Timeline"/>
        <action id="core.timelineGoToPreviousTick" text="Go To Previous Tick" shortcut="Ctrl+Shift+[" class="Timeline"/>
        <action id="core.timelineGoToEnd" text="Go To &amp;End" shortcut="End" class="Timeline"/>
        <action id="core.timelineGoToNextMeasure" text="Go To Next Measure" shortcut="]" class="Timeline"/>
        <action id="core.timelineGoToNextBeat" text="Go To Next Beat" shortcut="Ctrl+]" class="Timeline"/>
        <action id="core.timelineGoToNextTick" text="Go To Next Tick" shortcut="Ctrl+Shift+]" class="Timeline"/>
        <action id="core.resetProjectTimeRange" text="&amp;Reset Project Time Range" class="Timeline" />

        <action id="core.workspaceLayoutCommand" text="Workspace Layout" class="View" />
        <action id="core.workspaceDefaultLayout" text="Default &amp;Layout" class="View" diffscope:excludeFromCommands="true" />
        <action id="core.workspaceCustomLayouts" text="&amp;Custom Layouts" class="View" diffscope:excludeFromCommands="true" />
        <action id="core.workspaceSaveLayout" text="&amp;Save Current Layout As..." class="View" diffscope:excludeFromCommands="true" />
        <action id="core.allPanels" text="&amp;All Panels" class="View" diffscope:excludeFromCommands="true" />
        <action id="core.workspacePanelLeftTop" text="None (Left Top)" class="View" shortcut="Ctrl+Alt+1" diffscope:excludeFromCommands="true" />
        <action id="core.workspacePanelLeftBottom" text="None (Left Bottom)" class="View" shortcut="Ctrl+Alt+2" diffscope:excludeFromCommands="true" />
        <action id="core.workspacePanelRightTop" text="None (Right Top)" class="View" shortcut="Ctrl+Alt+3" diffscope:excludeFromCommands="true" />
        <action id="core.workspacePanelRightBottom" text="None (Right Bottom)" class="View" shortcut="Ctrl+Alt+4" diffscope:excludeFromCommands="true" />
        <action id="core.workspacePanelTopLeft" text="None (Top Left)" class="View" shortcut="Ctrl+Alt+5" diffscope:excludeFromCommands="true" />
        <action id="core.workspacePanelTopRight" text="None (Top Right)" class="View" shortcut="Ctrl+Alt+6" diffscope:excludeFromCommands="true" />
        <action id="core.workspacePanelBottomLeft" text="None (Bottom Left)" class="View" shortcut="Ctrl+Alt+7" diffscope:excludeFromCommands="true" />
        <action id="core.workspacePanelBottomRight" text="None (Bottom Right)" class="View" shortcut="Ctrl+Alt+8" diffscope:excludeFromCommands="true" />
        <action id="core.floatingPanels" text="&amp;Floating Panels" class="View" diffscope:excludeFromCommands="true" />
        <action id="core.dockActionToSideBar" text="Add &amp;New Panel or Action" class="View" />

        <action id="core.menuBarVisible" text="Show &amp;Menu Bar" class="View" />
        <action id="core.toolBarVisible" text="Show Too&amp;l Bar" class="View" />
        <action id="core.leftSideBarVisible" text="Show &amp;Left Side Bar" class="View" />
        <action id="core.rightSideBarVisible" text="Show &amp;Right Side Bar" class="View" />
        <action id="core.topSideBarVisible" text="Show &amp;Top Side Bar" class="View" />
        <action id="core.bottomSideBarVisible" text="Show &amp;Bottom Side Bar" class="View" />
        <action id="core.statusBarVisible" text="Show &amp;Status Bar" class="View" />

        <action id="core.documentations" text="&amp;Help" class="Help" shortcut="F1" />
        <action id="core.findActions" text="&amp;Find Actions..." class="Help" shortcut="Ctrl+Shift+P" />
        <action id="core.aboutApp" text="&amp;About ${APP_NAME}" class="Help"/>
        <action id="core.aboutQt" text="About &amp;Qt" class="Help"/>

        <menu id="core.mainMenu" topLevel="true" />
        <menu id="core.mainToolBarLeft" topLevel="true" />
        <menu id="core.mainToolBarMiddle" topLevel="true" />
        <menu id="core.mainToolBarRight" topLevel="true" />
        <menu id="core.mainStatusBar" topLevel="true" />
        <menu id="core.homeNavigation" topLevel="true"/>
        <menu id="core.homeTool" topLevel="true"/>

        <menu id="core.homePreferences" text="Preferences" />
        <menu id="core.homeHelp" text="Help" />

        <phony id="core.workspacePanelWidgets" topLevel="true" />

        <action id="core.statusText" diffscope:excludeFromCommands="true"/>
        <action id="core.propertiesPanel" text="Properties" catalog="core.workspacePanelWidgets" diffscope:uniquePanel="true" diffscope:excludeFromCommands="true"/>
        <action id="core.pluginsPanel" text="Plugins" catalog="core.workspacePanelWidgets" diffscope:excludeFromCommands="true"/>
        <action id="core.arrangementPanel" text="Arrangement" catalog="core.workspacePanelWidgets" diffscope:excludeFromCommands="true"/>
        <action id="core.mixerPanel" text="Mixer" catalog="core.workspacePanelWidgets" diffscope:excludeFromCommands="true"/>
        <action id="core.pianoRollPanel" text="Piano Roll" catalog="core.workspacePanelWidgets" diffscope:excludeFromCommands="true"/>
        <action id="core.notificationsPanel" text="Notifications" catalog="core.workspacePanelWidgets" diffscope:excludeFromCommands="true"/>
        <action id="core.tipsPanel" text="Tips" catalog="core.workspacePanelWidgets" diffscope:excludeFromCommands="true"/>
        <action id="core.digitalClock" diffscope:excludeFromCommands="true"/>
    </items>

    <layouts>
        <menu id="core.mainMenu">
            <menu id="core.file" text="&amp;File">
                <group id="core.fileOpenActions">
                    <action id="core.newFile"/>
                    <action id="core.openFile" />
                    <action id="core.saveFile" />
                </group>
                <group id="core.preferenceActions">
                    <action id="core.settings"/>
                    <action id="core.plugins"/>
                </group>
                <separator />
                <action id="core.showHome" />
                <separator />
                <action id="core.exit" />
            </menu>
            <menu id="core.edit" text="&amp;Edit">
                <menu id="core.timeline">
                    <group id="core.timeIndicatorTimecodeFormatActions">
                        <action id="core.timeIndicatorShowMusicTime" />
                        <action id="core.timeIndicatorShowAbsoluteTime" />
                    </group>
                    <group id="core.timelineGoToActions">
                        <action id="core.timelineGoTo" />
                        <action id="core.timelineQuickJump" />
                    </group>
                    <group id="core.timelineBackNavigationActions">
                        <action id="core.timelineGoToStart" />
                        <action id="core.timelineGoToPreviousMeasure" />
                        <action id="core.timelineGoToPreviousBeat" />
                        <action id="core.timelineGoToPreviousTick" />
                    </group>
                    <group id="core.timelineForwardNavigationActions">
                        <action id="core.timelineGoToEnd" />
                        <action id="core.timelineGoToNextMeasure" />
                        <action id="core.timelineGoToNextBeat" />
                        <action id="core.timelineGoToNextTick" />
                    </group>
                    <action id="core.resetProjectTimeRange" />
                </menu>
            </menu>
            <menu id="core.view" text="&amp;View">
                <group id="core.workspaceActions">
                    <menu id="core.workspace" text="&amp;Workspace">
                        <group id="core.workspaceLayouts">
                            <action id="core.workspaceDefaultLayout" />
                            <action id="core.workspaceCustomLayouts" />
                            <action id="core.workspaceSaveLayout" />
                            <action id="core.workspaceManageLayouts" />
                        </group>
                        <separator />
                        <action id="core.allPanels" />
                        <menu id="core.openedDockingPanels" text="Opened &amp;Docking Panels">
                            <action id="core.workspacePanelLeftTop" />
                            <action id="core.workspacePanelLeftBottom" />
                            <action id="core.workspacePanelRightTop" />
                            <action id="core.workspacePanelRightBottom" />
                            <action id="core.workspacePanelTopLeft" />
                            <action id="core.workspacePanelTopRight" />
                            <action id="core.workspacePanelBottomLeft" />
                            <action id="core.workspacePanelBottomRight" />
                        </menu>
                        <action id="core.floatingPanels" />
                        <separator />
                        <action id="core.dockActionToSideBar" />
                    </menu>
                </group>
                <group id="core.viewVisibilityActions">
                    <action id="core.menuBarVisible" />
                    <action id="core.toolBarVisible" />
                    <action id="core.leftSideBarVisible" />
                    <action id="core.rightSideBarVisible" />
                    <action id="core.topSideBarVisible" />
                    <action id="core.bottomSideBarVisible" />
                    <action id="core.statusBarVisible" />
                </group>
            </menu>
            <menu id="core.help" text="&amp;Help">
                <action id="core.documentations" />
                <separator />
                <action id="core.findActions" />
                <separator />
                <group id="core.aboutActions">
                    <action id="core.aboutApp" />
                    <action id="core.aboutQt" />
                </group>
            </menu>
        </menu>

        <menu id="core.mainToolBarLeft">
            <action id="core.showHome" />
            <separator />
            <action id="core.openFile" />
            <action id="core.saveFile" />
        </menu>

        <menu id="core.mainToolBarRight">
            <action id="core.findActions" />
            <action id="core.documentations" />
        </menu>

        <menu id="core.mainToolBarMiddle">
            <group id="core.toolBarTimelineNavigationActions">
                <action id="core.digitalClock" />
                <action id="core.timelineGoToStart" />
                <action id="core.timelineGoToEnd" />
            </group>
        </menu>

        <menu id="core.mainStatusBar">
            <action id="core.statusText" />
            <stretch />
        </menu>

        <menu id="core.homeNavigation">
            <action id="core.newFile"/>
            <action id="core.openFile" />
        </menu>

        <menu id="core.homeTool">
            <menu id="core.homePreferences">
                <group id="core.preferenceActions" />
            </menu>
            <menu id="core.homeHelp">
                <action id="core.documentations" />
                <separator />
                <action id="core.aboutApp" />
                <action id="core.aboutQt" />
            </menu>
        </menu>
    </layouts>

</actionExtension>