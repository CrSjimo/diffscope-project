<?xml version="1.0" encoding="UTF-8"?>
<actionExtension>
    <version>1.0</version>
    <id>org.diffscope.core</id>
    <configuration>
        <defaultCatalog>core.mainMenu</defaultCatalog>
        <translationContext
            text="Application::ActionText"
            class="Application::ActionClass"
            description="Application::ActionDescription"
        />
        <vars>
            <var key="APP_NAME" value="DiffScope" />
        </vars>
    </configuration>

    <items>
        <action id="core.newFile" text="&amp;New" class="File" shortcut="Ctrl+N" />
        <action id="core.openFile" text="&amp;Open..." class="File" shortcut="Ctrl+O" />
        <action id="core.saveFile" text="&amp;Save" class="File" shortcut="Ctrl+S" />

        <action id="core.settings" text="Se&amp;ttings..." description="Open Settings" class="Preferences" shortcut="Ctrl+,"/>
        <action id="core.plugins" text="Pl&amp;ugins..." class="Preferences" shortcut=""/>

        <action id="core.showHome" text="Show &amp;Home Window"  class="Application" />

        <action id="core.exit" text="E&amp;xit"  class="Application" />

        <action id="core.workspaceDefaultLayout" text="Default &amp;Layout" class="View" />
        <action id="core.workspaceCustomLayouts" text="&amp;Custom Layouts" class="View" />
        <action id="core.workspaceSaveLayout" text="&amp;Save Current Layout As..." class="View" />
        <action id="core.allPanels" text="&amp;All Panels" class="View" />
        <action id="core.workspacePanelLeftTop" text="None (Left Top)" class="View" shortcut="Ctrl+Alt+1" />
        <action id="core.workspacePanelLeftBottom" text="None (Left Bottom)" class="View" shortcut="Ctrl+Alt+2" />
        <action id="core.workspacePanelRightTop" text="None (Right Top)" class="View" shortcut="Ctrl+Alt+3" />
        <action id="core.workspacePanelRightBottom" text="None (Right Bottom)" class="View" shortcut="Ctrl+Alt+4" />
        <action id="core.workspacePanelTopLeft" text="None (Top Left)" class="View" shortcut="Ctrl+Alt+5" />
        <action id="core.workspacePanelTopRight" text="None (Top Right)" class="View" shortcut="Ctrl+Alt+6" />
        <action id="core.workspacePanelBottomLeft" text="None (Bottom Left)" class="View" shortcut="Ctrl+Alt+7" />
        <action id="core.workspacePanelBottomRight" text="None (Bottom Right)" class="View" shortcut="Ctrl+Alt+8" />
        <action id="core.floatingPanels" text="&amp;Floating Panels" class="View" />
        <action id="core.dockActionToSideBar" text="Add &amp;New Panel or Action" class="View" />

        <action id="core.menuBarVisible" text="Show &amp;Menu Bar" class="View" />
        <action id="core.toolBarVisible" text="Show Too&amp;l Bar" class="View" />
        <action id="core.leftSideBarVisible" text="Show &amp;Left Side Bar" class="View" />
        <action id="core.rightSideBarVisible" text="Show &amp;Right Side Bar" class="View" />
        <action id="core.topSideBarVisible" text="Show &amp;Top Side Bar" class="View" />
        <action id="core.bottomSideBarVisible" text="Show &amp;Bottom Side Bar" class="View" />
        <action id="core.statusBarVisible" text="Show &amp;Status Bar" class="View" />

        <action id="core.documentations" text="&amp;Help" class="Help" shortcut="F1" />
        <action id="core.findActions" text="&amp;Find Actions..." class="Help" shortcut="Ctrl+Shift+P" />
        <action id="core.aboutApp" text="&amp;About ${APP_NAME}" class="Help"/>
        <action id="core.aboutQt" text="About &amp;Qt" class="Help"/>

        <menu id="core.mainMenu" topLevel="true" />
        <menu id="core.mainToolBar" topLevel="true" />
        <menu id="core.mainStatusBar" topLevel="true" />
        <menu id="core.homeNavigation" topLevel="true"/>
        <menu id="core.homeTool" topLevel="true"/>

        <menu id="core.homePreferences" text="Preferences" />
        <menu id="core.homeHelp" text="Help" />

        <phony id="core.workspacePanelWidgets" topLevel="true" />

        <action id="core.statusText" />
        <action id="core.propertiesPanel" text="Properties" catalog="core.workspacePanelWidgets" uniquePanel="true" />
        <action id="core.pluginsPanel" text="Plugins" catalog="core.workspacePanelWidgets" />
        <action id="core.arrangementPanel" text="Arrangement" catalog="core.workspacePanelWidgets" />
        <action id="core.mixerPanel" text="Mixer" catalog="core.workspacePanelWidgets" />
        <action id="core.pianoRollPanel" text="Piano Roll" catalog="core.workspacePanelWidgets" />
        <action id="core.notificationsPanel" text="Notifications" catalog="core.workspacePanelWidgets" />
        <action id="core.tipsPanel" text="Tips" catalog="core.workspacePanelWidgets" />
    </items>

    <layouts>
        <menu id="core.mainMenu">
            <menu id="core.file" text="&amp;File">
                <group id="core.fileOpenActions">
                    <action id="core.newFile"/>
                    <action id="core.openFile" />
                    <action id="core.saveFile" />
                </group>
                <group id="core.preferenceActions">
                    <action id="core.settings"/>
                    <action id="core.plugins"/>
                </group>
                <separator />
                <action id="core.showHome" />
                <separator />
                <action id="core.exit" />
            </menu>
            <menu id="core.view" text="&amp;View">
                <group id="core.workspaceActions">
                    <menu id="core.workspace" text="&amp;Workspace">
                        <group id="core.workspaceLayouts">
                            <action id="core.workspaceDefaultLayout" />
                            <action id="core.workspaceCustomLayouts" />
                            <action id="core.workspaceSaveLayout" />
                            <action id="core.workspaceManageLayouts" />
                        </group>
                        <separator />
                        <action id="core.allPanels" />
                        <menu id="core.openedDockingPanels" text="Opened &amp;Docking Panels">
                            <action id="core.workspacePanelLeftTop" />
                            <action id="core.workspacePanelLeftBottom" />
                            <action id="core.workspacePanelRightTop" />
                            <action id="core.workspacePanelRightBottom" />
                            <action id="core.workspacePanelTopLeft" />
                            <action id="core.workspacePanelTopRight" />
                            <action id="core.workspacePanelBottomLeft" />
                            <action id="core.workspacePanelBottomRight" />
                        </menu>
                        <action id="core.floatingPanels" />
                        <separator />
                        <action id="core.dockActionToSideBar" />
                    </menu>
                </group>
                <group id="core.viewVisibilityActions">
                    <action id="core.menuBarVisible" />
                    <action id="core.toolBarVisible" />
                    <action id="core.leftSideBarVisible" />
                    <action id="core.rightSideBarVisible" />
                    <action id="core.topSideBarVisible" />
                    <action id="core.bottomSideBarVisible" />
                    <action id="core.statusBarVisible" />
                </group>
            </menu>
            <menu id="core.help" text="&amp;Help">
                <action id="core.documentations" />
                <separator />
                <action id="core.findActions" />
                <separator />
                <group id="core.aboutActions">
                    <action id="core.aboutApp" />
                    <action id="core.aboutQt" />
                </group>
            </menu>
        </menu>

        <menu id="core.mainToolBar">
            <action id="core.showHome" />
            <separator />
            <action id="core.openFile" />
            <action id="core.saveFile" />
            <stretch />
            <action id="core.findActions" />
            <action id="core.documentations" />
        </menu>

        <menu id="core.mainStatusBar">
            <action id="core.statusText" />
            <stretch />
        </menu>

        <menu id="core.homeNavigation">
            <action id="core.newFile"/>
            <action id="core.openFile" />
        </menu>

        <menu id="core.homeTool">
            <menu id="core.homePreferences">
                <group id="core.preferenceActions" />
            </menu>
            <menu id="core.homeHelp">
                <action id="core.documentations" />
                <separator />
                <action id="core.aboutApp" />
                <action id="core.aboutQt" />
            </menu>
        </menu>
    </layouts>

</actionExtension>