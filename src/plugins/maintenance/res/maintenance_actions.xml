<?xml version="1.0" encoding="UTF-8"?>
<actionExtension xmlns:diffscope="http://schemas.diffscope.org/diffscope/actions/diffscope">
    <version>1.0</version>
    <id>org.diffscope.maintenance</id>
    <configuration>
        <defaultCatalog>core.mainMenu</defaultCatalog>
        <translationContext
            text="Application::ActionText"
            class="Application::ActionClass"
            description="Application::ActionDescription"
        />
        <vars>
            <var key="APP_NAME" value="DiffScope" />
        </vars>
    </configuration>

    <items>
        <action id="maintenance.diagnosis.generateDiagnosticReport^" />
        <action id="maintenance.diagnosis.openLogsDirectory" />
        <action id="maintenance.diagnosis.openDataDirectory" />
        <action id="maintenance.diagnosis.openPluginsDirectory" />
        <action id="maintenance.getInvolved.reportIssue" description="Report bugs, request new features, or ask for support" />
        <action id="maintenance.getInvolved.contribute" text="Contribute to ${APP_NAME}" />
        <action id="maintenance.getInvolved.joinTheCommunity" />
        <action id="maintenance.update.checkForUpdates" />
        <action id="maintenance.update.viewReleaseLog" />
    </items>

    <layouts>
        <group id="maintenance.diagnosisActions">
            <action id="maintenance.diagnosis.generateDiagnosticReport" />
            <action id="maintenance.diagnosis.openLogsDirectory" />
            <action id="maintenance.diagnosis.openDataDirectory" />
            <action id="maintenance.diagnosis.openPluginsDirectory" />
        </group>

        <group id="maintenance.getInvolvedActions">
            <action id="maintenance.getInvolved.reportIssue" />
            <action id="maintenance.getInvolved.contribute" />
            <action id="maintenance.getInvolved.joinTheCommunity" />
        </group>

        <group id="maintenance.updateActions">
            <action id="maintenance.update.checkForUpdates" />
            <action id="maintenance.update.viewReleaseLog" />
        </group>
    </layouts>

    <insertions>
        <insertion target="core.help" anchor="last">
            <group id="maintenance.diagnosisActions" />
            <group id="maintenance.getInvolvedActions" />
            <group id="maintenance.updateActions" />
        </insertion>
    </insertions>

</actionExtension>